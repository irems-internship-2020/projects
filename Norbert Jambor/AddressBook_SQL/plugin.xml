<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="addressbook.main.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="addressbook.main.Perspective"
            name="RCP Perspective"
            id="addressbook.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="addressbook.view.ContactsView"
            id="addressbook.view.contact"
            name="Contacts View"
            restorable="true">
      </view>
      <view
            class="addressbook.view.AddressView"
            id="addressbook.editor.create"
            name="Details View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="addressbook.editor.Editor"
            default="false"
            id="addressbook.editor.create"
            name="Create Contact">
      </editor>
      <editor
            class="addressbook.editor.EditorContact"
            default="false"
            id="addressbook.editor.edit"
            name="Edit Contact">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="addressbook.view.contact"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="addressbook.editor.create"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="addressbook.command.CreateContactCommand"
            id="addressbook.command.create"
            name="Create">
      </command>
      <command
            defaultHandler="addressbook.command.DeleteContactCommand"
            id="addressbook.command.delete"
            name="Delete">
      </command>
      <command
            defaultHandler="addressbook.command.EditorContactCommand"
            id="addressbook.command.edit"
            name="Editor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="addressbook.view.contactContribution"
            targetID="addressbook.view.contact">
         <action
               class="addressbook.action.DeleteContactAction"
               enablesFor="1"
               id="Address Book.action2"
               label="Delete"
               style="push"
               toolbarPath="additions">
         </action>
         <action
               class="addressbook.action.EditorContactAction"
               enablesFor="1"
               id="addressbook.editor.edit"
               label="Edit"
               style="push"
               toolbarPath="additions">
         </action>
         <action
               class="addressbook.action.CreateContactAction"
               id="addressbook.editor.create"
               label="Create"
               style="push"
               toolbarPath="additions">
         </action>
      </viewContribution>
   </extension>

</plugin>
