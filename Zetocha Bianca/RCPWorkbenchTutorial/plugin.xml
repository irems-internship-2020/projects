<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="test2.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="test2.Perspective"
            name="RCP Perspective"
            id="RCPWorkbenchTutorial.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.o7planning.tutorial.rcp.cmd.AboutCommand"
            id="org.o7planning.tutorial.rcp.cmd.about"
            name="About">
      </command>
      <command
            defaultHandler="org.o7planning.tutorial.rcp.cmd.UserCommand"
            id="org.o7planning.tutorial.rcp.cmd.user"
            name="Call UserEditor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File"
               tooltip="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
            <command
                  commandId="org.o7planning.tutorial.rcp.cmd.user"
                  icon="icons/Editor16.png"
                  label="Open UserEditor"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help"
               tooltip="Help">
            <command
                  commandId="org.o7planning.tutorial.rcp.cmd.about"
                  label="About"
                  style="push"
                  tooltip="About">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="toolbar1">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  icon="icons/exit16.png"
                  label="Exit"
                  style="push"
                  tooltip="Exit">
            </command>
            <command
                  commandId="org.o7planning.tutorial.rcp.cmd.about"
                  icon="icons/about16.png"
                  label="About"
                  style="push">
            </command>
         </toolbar>
         <toolbar
               id="toolbar0">
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.o7planning.tutorial.rcp.view.ContactView"
            icon="icons/contact16.png"
            id="org.o7planning.tutorial.rcp.view.contact"
            name="Contact"
            restorable="true">
      </view>
      <view
            class="org.o7planning.tutorial.rcp.view.CategoryView"
            icon="icons/Category16.png"
            id="org.o7planning.tutorial.rcp.view.category"
            name="Category"
            restorable="true">
      </view>
      <view
            class="org.o7planning.tutorial.rcp.view.HistoryView"
            icon="icons/History16.png"
            id="org.o7planning.tutorial.rcp.view.history"
            name="HistoryView"
            restorable="true">
      </view>
      <view
            class="org.o7planning.tutorial.rcp.view.TableView"
            icon="icons/Task16.png"
            id="org.o7planning.tutorial.rcp.view.table"
            name="Table"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="org.o7planning.tutorial.rcp.view.table"
               minimized="false"
               moveable="true"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="RCPWorkbenchTutorial.perspective">
         <view
               closeable="true"
               id="org.o7planning.tutorial.rcp.view.contact"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               closeable="true"
               id="org.o7planning.tutorial.rcp.view.category"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="org.o7planning.tutorial.rcp.view.contact"
               showTitle="true">
         </view>
         <view
               closeable="true"
               id="org.o7planning.tutorial.rcp.view.history"
               minimized="false"
               moveable="true"
               relationship="bottom"
               relative="org.o7planning.tutorial.rcp.view.contact"
               showTitle="true">
         </view>
         <view
               closeable="true"
               id="org.o7planning.tutorial.rcp.view.user"
               minimized="false"
               relationship="left"
               relative="org.o7planning.tutorial.rcp.view.user"
               showTitle="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.o7planning.tutorial.rcp.editor.UserEditor"
            default="true"
            icon="icons/Editor16.png"
            id="org.wikiict.tutorial.rcp.editor.user"
            name="UserEditor">
      </editor>
   </extension>

</plugin>
